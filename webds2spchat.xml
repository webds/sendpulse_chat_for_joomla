    <name>PLG_SYSTEM_SENDPULSECHAT</name>
    <author>Roman WebDS</author>
    <authorEmail>info@webds.net</authorEmail>
    <authorUrl>https://webds.net</authorUrl>
    <creationDate>2025-10-01</creationDate>
